            "calendly_url": {
                "type": "text",
                "default": "",
                "group": "booking",
                "label": "Calendly URL",
                "description": "Your Calendly scheduling page URL (e.g. https://calendly.com/your-handle/meet)"
            },
            "hero_content": {
                "type": "text",
                "default": "Professional Fly Fishing Instructor|Find Your|Flow|State|Experience the **intersection** of skill and serenity on pristine waters. Where challenge meets absolute control, and every cast becomes meditation.|Book Your Experience",
                "group": "hero",
                "label": "Hero Content",
                "description": "Format: Badge|Title Line 1|Flow Word|State Word|Description (use **word** for underline)|CTA Text - Separate with |"
            },
            "hero_stats": {
                "type": "text",
                "default": "12+|Years Experience|500+|Guided Trips|25+|River Systems",
                "group": "hero",
                "label": "Hero Statistics",
                "description": "Format: Number1|Label1|Number2|Label2|Number3|Label3 - Separate with |"
            },
