{{!< default}}

{{#post}}

<article class="blog-post {{post_class}}">

    {{!-- Hero Section --}}
    {{#if feature_image}}
    <div class="blog-post-hero">
        <img class="blog-post-hero-image" src="{{feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
        <div class="blog-post-hero-overlay"></div>
        
        {{!-- Back Button --}}
        <div class="blog-post-back">
            <a href="/blog/" class="btn-back">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
                Back to Blog
            </a>
        </div>

        {{!-- Article Header --}}
        <div class="blog-post-header">
            <div class="gh-container">
                {{#primary_tag}}
                <span class="blog-post-badge">{{name}}</span>
                {{/primary_tag}}
                
                <h1 class="blog-post-title">{{title}}</h1>
                
                <div class="blog-post-meta">
                    <div class="blog-post-meta-item">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                        <span>{{primary_author.name}}</span>
                    </div>
                    <div class="blog-post-meta-item">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="16" y1="2" x2="16" y2="6"></line>
                            <line x1="8" y1="2" x2="8" y2="6"></line>
                            <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                        <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM D, YYYY"}}</time>
                    </div>
                    <div class="blog-post-meta-item">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                        <span>{{reading_time}}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/if}}

    {{!-- Article Content --}}
    <div class="blog-post-content-wrapper">
        <div class="gh-container">
            <div class="blog-post-layout">
                {{!-- Main Content --}}
                <div class="blog-post-main">
                    {{!-- Share Buttons --}}
                    <div class="blog-post-share">
                        <span class="blog-post-share-label">Share this article:</span>
                        <a href="https://twitter.com/intent/tweet?text={{encode title}}&url={{url absolute="true"}}" class="btn-share" target="_blank" rel="noopener">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="18" cy="5" r="3"></circle>
                                <circle cx="6" cy="12" r="3"></circle>
                                <circle cx="18" cy="19" r="3"></circle>
                                <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line>
                                <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line>
                            </svg>
                            Share
                        </a>
                        <div class="blog-post-reading-time">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
                                <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
                            </svg>
                            <span>{{reading_time}}</span>
                        </div>
                    </div>

                    {{!-- Article Body --}}
                    <div class="blog-post-content">
                        {{content}}
                    </div>
                </div>

                {{!-- Sidebar --}}
                <aside class="blog-post-sidebar">
                    {{!-- Author Card --}}
                    <div class="blog-author-card">
                        <div class="blog-author-header">
                            {{#if primary_author.profile_image}}
                            <img class="blog-author-avatar" src="{{primary_author.profile_image}}" alt="{{primary_author.name}}" />
                            {{else}}
                            <div class="blog-author-avatar-placeholder">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                            </div>
                            {{/if}}
                            <div>
                                <h3 class="blog-author-name">{{primary_author.name}}</h3>
                                <p class="blog-author-role">Master Fly Fishing Guide</p>
                            </div>
                        </div>
                        {{#if primary_author.bio}}
                        <p class="blog-author-bio">{{primary_author.bio}}</p>
                        {{else}}
                        <p class="blog-author-bio">
                            With over 12 years of guiding experience across New Mexico's diverse waters, 
                            specializing in helping anglers find their flow state through mindful fishing techniques.
                        </p>
                        {{/if}}
                    </div>

                    {{!-- Newsletter Signup --}}
                    <div class="blog-newsletter-card">
                        <h3 class="blog-newsletter-title">Stay Updated</h3>
                        <p class="blog-newsletter-description">
                            Get the latest fishing reports and technique articles delivered to your inbox.
                        </p>
                        <form class="blog-newsletter-form">
                            <input type="email" placeholder="Enter your email" class="blog-newsletter-input" />
                            <button type="submit" class="btn btn-primary btn-block">Subscribe</button>
                        </form>
                    </div>
                </aside>
            </div>

            {{!-- Related Posts --}}
            {{#get "posts" filter="id:-{{id}}+tag:{{primary_tag.slug}}" limit="3" as |related|}}
            {{#if related}}
            <div class="blog-related">
                <h2 class="blog-related-title">Related Articles</h2>
                <div class="blog-related-grid">
                    {{#foreach related}}
                    <article class="blog-related-card">
                        <a href="{{url}}" class="blog-related-link">
                            {{#if feature_image}}
                            <div class="blog-related-image-wrapper">
                                <img class="blog-related-image" src="{{feature_image}}" alt="{{title}}" loading="lazy" />
                                {{#primary_tag}}
                                <span class="blog-related-badge">{{name}}</span>
                                {{/primary_tag}}
                            </div>
                            {{/if}}
                            <div class="blog-related-content">
                                <h3 class="blog-related-card-title">{{title}}</h3>
                            </div>
                        </a>
                    </article>
                    {{/foreach}}
                </div>
            </div>
            {{/if}}
            {{/get}}
        </div>
    </div>
</article>

{{/post}}