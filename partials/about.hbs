      <p class="quote-text">
        {{#if @custom.about_quote}}{{@custom.about_quote}}{{else}}The river teaches patience, presence, and the art of letting go. Every cast is a conversation with nature.{{/if}}
      </p>
      <footer class="quote-attribution">
        <cite>— Tanner Hall</cite>
      </footer>
    </blockquote>

    <div class="story-stats">
      <div class="stat-item">
        <div class="stat-number">{{#if @custom.stats_years}}{{@custom.stats_years}}{{else}}12+{{/if}}</div>
        <div class="stat-label">Years Experience</div>
      </div>
      <div class="stat-item">
        <div class="stat-number">{{#if @custom.stats_clients}}{{@custom.stats_clients}}{{else}}500+{{/if}}</div>
        <div class="stat-label">Clients Instructed</div>
      </div>
      <div class="stat-item">
        <div class="stat-number">{{#if @custom.stats_knots}}{{@custom.stats_knots}}{{else}}10,000+{{/if}}</div>
